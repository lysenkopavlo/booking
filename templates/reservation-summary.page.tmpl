{{template "base" .}}

{{define "content"}}
<div class="container">
    {{$res := index .Data "reservation"}}
    <div class="row">
        <div class="col">
            <hr>
            <h1 class="text-center me-3">Reservation summary<h1>
                <hr>
                <table class="table table-striped">
                    <thead>
                        <tbody>
                            <tr>
                                <td>Name:</td>
                                <td>{{$res.FirstName}} {{$res.LastName}}</td>
                            </tr>
                            <tr>
                                <td>Arrival:</td>
                                <td></td>
                            </tr>
                            <tr>
                                <td>Departure:</td>
                                <td></td>
                            </tr>
                            <tr>
                                <td>Email:</td>
                                <td>{{$res.Email}}</td>
                            </tr>
                            <tr>
                                <td>Phone:</td>
                                <td>{{$res.Phone}}</td>
                            </tr>
                        </tbody>
                    </thead>

                </table>
                
        </div>
    </div>
</div>
{{end}}